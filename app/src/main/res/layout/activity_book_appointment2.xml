<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".BookAppointmentActivity">

    <Button
        android:id="@+id/buttonBMBBook"
        android:layout_width="331dp"
        android:layout_height="50dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="54dp"
        android:text="Book Appointment"
        android:textColorHighlight="#4CAF50"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.423"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextBMBContact"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="390dp"
        android:layout_height="63dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="62dp"
        android:layout_marginBottom="60dp"
        android:text="24*7 Healthcare"
        android:textColor="#C666D6"
        android:textColorHighlight="#D154E6"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewBMBTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewBMBTitle"
        android:layout_width="328dp"
        android:layout_height="65dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:text="Book Appointment"
        android:textColor="#F4F6F4"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/editTextBMBFullName"
        android:layout_width="388dp"
        android:layout_height="52dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="text"
        android:textColor="#FDFFFD"
        android:textColorHighlight="#F6F1F1"
        android:textColorHint="#EEF4EE"
        android:textColorLink="#FDF8F8"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewBMBTitle" />

    <EditText
        android:id="@+id/editTextBMBAddress"
        android:layout_width="384dp"
        android:layout_height="45dp"
        android:layout_marginTop="367dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/ic_baseline_security_24"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPersonName"
        android:textColor="#E3E8E3"
        android:textColorHighlight="#F6F3F3"
        android:textColorHint="#F4FBF4"
        android:textColorLink="#F6F0F0"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/editTextBMBPinCode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.692" />

    <EditText
        android:id="@+id/editTextBMBContact"
        android:layout_width="382dp"
        android:layout_height="49dp"
        android:layout_marginBottom="248dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:ems="10"
        android:hint="Fees"
        android:inputType="textPersonName"
        android:textColor="#ECEFEC"
        android:textColorHighlight="#F3EBEB"
        android:textColorHint="#EFF4F0"
        android:textColorLink="#FAF2F2"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.931"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextBMBPinCode"
        android:layout_width="382dp"
        android:layout_height="46dp"
        android:layout_marginTop="76dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:ems="10"
        android:hint="Contact Number"
        android:inputType="textPersonName"
        android:textColor="#EFF4F0"
        android:textColorHighlight="#FAF8F8"
        android:textColorHint="#F2F6F2"
        android:textColorLink="#F3EEEE"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/editTextBMBContact"
        app:layout_constraintEnd_toEndOf="@+id/editTextBMBAddress"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/editTextBMBContact"
        app:layout_constraintTop_toBottomOf="@+id/editTextBMBFullName"
        app:layout_constraintVertical_bias="0.6" />

    <Button
        android:id="@+id/buttonAppBack"
        android:layout_width="337dp"
        android:layout_height="48dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="18dp"
        android:text="Back"
        android:textColorHighlight="#4CAF50"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.355"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBMBBook" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="89dp"
        android:layout_height="36dp"
        android:layout_marginStart="79dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="157dp"
        android:text="Select Date"
        android:textColor="#EDD504"
        android:textColorHint="#E6DA72"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/textViewDeliverTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextBMBContact" />

    <Button
        android:id="@+id/buttonAppDate"
        style="?android:spinnerStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="17/03/2024"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textViewDeliverTime"
        android:layout_width="129dp"
        android:layout_height="36dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="60dp"
        android:text="Select Time"
        android:textColor="#EDD504"
        android:textColorHint="#E6DA72"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/editTextBMBContact" />

    <Button
        android:id="@+id/buttonCartTimePicker"
        style="?android:spinnerStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="10:00"
        app:layout_constraintEnd_toEndOf="@+id/textViewDeliverTime"
        app:layout_constraintTop_toBottomOf="@+id/textViewDeliverTime" />


</androidx.constraintlayout.widget.ConstraintLayout>